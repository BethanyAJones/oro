// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

//MODELS
model Trips {
  id Int @id @default(autoincrement())
  photo String
  title String @unique
  description String
  address String
  startDate DateTime
  endDate DateTime
  totalBudget Int
  currentFunds Int
  owner Users @relation(fields: [ownerId], references: [id])
  ownerId Int
  attendees Users @relation(fields: [attendeesId], references: [id])
  attendeesId Int
  poi Points
  status String
}

model Users {
  id Int @id @default(autoincrement())
  googleId Int @unique
  fullName String
  picture String ?
  email String @unique
  trips Trips[]
}

// Tags Model
model Tags {
  id Int @id @default(autoincrement())
  name String @unique
}

// POI Model 
model Points {
  id Int @id @default(autoincrement())
  photo String
  title String @unique
  description String
  address String
  date DateTime
  totalBudget Int
  currentFunds Int
  tags Tags @relation(fields: [tagsId], references: [id])
  tagsId Int
}

// JOIN TABLES ------------------
// POI TRIPS
model PoiTrips {
  id Int @id @default(autoincrement())
  trips Trips[]
  poi Points[]
}

// POI Votes Join
model PoiVotes {
  id Int @id @default(autoincrement())
  users Users[]
  poi Points
  votes Int 
}
// POI Users Join
model PoiUsers {
  id Int @id @default(autoincrement())
  users Users[]
  poi Points[]
}

// Users Trips Join
model TripsUsers {
  id Int @id @default(autoincrement())
  users Users[]
  trips Trips[]
  contributions Int
}

// Friends Join Table
model Friends {
  id Int @id @default(autoincrement())
  userId Users
  friendId Users[]
  status String
}